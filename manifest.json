{
  "manifest_version": 3,
  "name": "LigaMagic CardBlocker",
  "version": "1.0",
  "permissions": [
    "storage",
    "downloads",
    "tabs",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "include_globs": ["*?view=ecom*"],
      "js": [
        "logger.js",
        "remover.js",
        "buttonHandler.js",
        "init.js",
        "utils.js"
      ]
    }
  ]
}
