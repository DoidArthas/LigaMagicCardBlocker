{
  "manifest_version": 3,
  "name": "LigaMagic CardBlocker",
  "version": "1.1",
  "permissions": [
    "storage",
    "downloads",
    "tabs",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "include_globs":  [
                        "*?view=ecom*",
                        "*ligamagic.com.br/?view=*"
                        ],
      "js": [
        "logger.js",
        "removerInterface.js",
        "srcLiga/remover.js",
        "srcStores/removerLM.js",
        "srcLiga/buttonHandler.js",
        "srcLiga/buttonCreator.js",
        "srcStores/buttonCreatorLM.js",
        "buttonCreatorInterface.js",
        "init.js",
        "utils.js"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "neemias20142001@gmail.com",
      "strict_min_version": "130.0"
    }
  }
}
